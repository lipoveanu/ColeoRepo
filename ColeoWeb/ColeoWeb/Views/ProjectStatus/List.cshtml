<div class="row">
    
    @using (Html.BeginForm("List", "ProjectStatus", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="col-md-12">
            <div id="sortable" class="form-group row">
                <ul class="sortable-list">
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <li class="sortable-item tile" style="background-color: #@Model[i].Color;">
                            @Html.HiddenFor(m => m[i].Id)
                            @Html.HiddenFor(m => m[i].Name)
                            @Html.HiddenFor(m => m[i].Color)
                            @Html.HiddenFor(m => m[i].IsDefault)
                            @Html.HiddenFor(m => m[i].Order, new { @class = "position" })
                            <h4 class="title"> @Html.DisplayFor(m => m[i].Name) </h4>

                            <button id="edit-btn" class="btn btn-default btn-sm pull-right" onclick="ShowEdit(@Model[i].Id);">
                                <span class="glyphicon glyphicon-edit"></span> Edit
                            </button>
                            <button type="button" id="delete-btn" class="btn btn-default btn-sm pull-right" onclick="DeleteItem(@Model[i].Id)">
                                <span class="glyphicon glyphicon-floppy-remove"></span> Delete
                            </button>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group row">
                <ul class="sortable-list">
                    <li class="tile">
                        <button id="edit-btn" class="btn btn-default btn-sm pull-right" onclick="ShowEdit();">
                            <span class="glyphicon glyphicon-plus"></span> Add
                        </button>
                    </li>
                </ul>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <input type="submit" id="btn-save" class="hidden" value="Save">
            </div>
        </div>

    }
</div>


<script>

    $(document).ready(function () {
        SetUpSortable();
    });

</script>
