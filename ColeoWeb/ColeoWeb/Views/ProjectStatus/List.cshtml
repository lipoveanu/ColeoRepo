<div class="row">
    
    @using (Html.BeginForm("List", "ProjectStatus", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="col-md-12">
            <div id="sortable" class="form-group row">
                <ul class="sortable-list">
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <li class="sortable-item tile" style="background-color: #@Model[i].Color;">
                            @Html.HiddenFor(m => m[i].Id)
                            @Html.HiddenFor(m => m[i].Name)
                            @Html.HiddenFor(m => m[i].Color)
                            @Html.HiddenFor(m => m[i].IsDefault)
                            @Html.HiddenFor(m => m[i].Order, new { @class = "position" })
                            <h3 class="title"> @Html.DisplayFor(m => m[i].Name) </h3>

                            <div title="Edit" class="glyphicon-md pull-right add-tooltip" onclick="ShowEdit(@Model[i].Id);">
                                <span class="glyphicon glyphicon-edit"></span> &nbsp;
                            </div>
                            <div title="Delete" class="glyphicon-md pull-right add-tooltip" onclick="DeleteItem(@Model[i].Id)">
                                <span class="glyphicon glyphicon-floppy-remove"></span> &nbsp;
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group row">
                <ul class="sortable-list">
                    <li class="tile">
                        <div title="Add" class="glyphicon-lg add-tooltip" onclick="ShowEdit();">
                            <span class="glyphicon glyphicon-plus"></span> &nbsp;
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <input type="submit" id="list-save" class="hidden" value="Save">
            </div>
        </div>

    }
    
</div>


<script>

    $(document).ready(function () {
        SetUpSortable();
        AddTooltip();
    });

</script>
