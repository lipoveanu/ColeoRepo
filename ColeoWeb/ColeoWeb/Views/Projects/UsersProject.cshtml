@model ColeoWeb.Models.ProjectViewModel


<div class="col-md-6">
    <div class="form-group row">
        <ul id="sortable1" class="box">
            <h4 class="margin-left-20"> Available users </h4>
            @foreach (var item in Model.UsersProject.Where(x => x.IsAssigned == false))
            {
                @Html.Partial("UsersProjectItem", item);
            }
        </ul>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group row">
        <ul id="sortable2" class="box">
            <h4 class="margin-left-20"> Assigned users </h4>
            @foreach (var item in Model.UsersProject.Where(x => x.IsAssigned == true))
            {
                @Html.Partial("UsersProjectItem", item);
            }
        </ul>
    </div>
</div>


<div class="form-group row">
    <div class="col-md-2">
        <input type="submit" id="list-save" class="hidden" value="Save">
    </div>
</div>





