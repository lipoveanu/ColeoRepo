@model ColeoWeb.Models.ProjectViewModel


<div class="col-md-6">
    <div class="form-group row">
        <ul id="sortable1" class="sortable-list" >
            @for (var i = 0; i < Model.UsersProject.Where(x=>x.IsAssigned == false).Count(); i++)
            {
                <li class="sortable-item tile tile-push">
                    @Html.HiddenFor(m => Model.UsersProject[i].Id)
                    @Html.HiddenFor(m => Model.UsersProject[i].ProjectId)
                    <h3 class="title"> @Html.DisplayFor(m => Model.UsersProject[i].User.UserName) </h3>
                </li>
            }
        </ul>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group row">
        <ul id="sortable2" class="sortable-list">
            @for (var i = 0; i < Model.UsersProject.Where(x=>x.IsAssigned == true).Count(); i++)
            {
                <li class="sortable-item tile tile-push">
                    @Html.HiddenFor(m => Model.UsersProject[i].Id)
                    @Html.HiddenFor(m => Model.UsersProject[i].ProjectId)
                    <h3 class="title"> @Html.DisplayFor(m => Model.UsersProject[i].User.UserName) </h3>
                </li>
            }
        </ul>
    </div>
</div>


<div class="form-group row">
    <div class="col-md-2">
        <input type="submit" id="list-save" class="hidden" value="Save">
    </div>
</div>



